class Solution {
public:
    int firstUniqChar(string s) {
        string copy = s;
        vector<int> vec(27);
        sort(s.begin(),s.end());
        int ans = 0;
        
        for(int i=0;i<s.size()-1;i++)
        {   
            if(vec[int(s[i])-int('a')]==0)
                vec[int(s[i])-int('a')]++;
            if(s[i]==s[i+1])
                vec[int(s[i])-int('a')]++;
        }
        vec[int(s[s.size()-1]-int('a'))]++;
        
        for(int i=0;i<copy.size();i++)
        {   
            if(vec[int(copy[i])-int('a')]==1)
                return i;
        }
        return -1;
    }
};

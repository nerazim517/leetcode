class Solution {
public:
    int findKthLargest(vector<int>& nums, int k) {
        unordered_map  <int,int> mp;
        for(int i=0;i<nums.size();i++)
        {   
            mp[nums[i]+10000]++;
        }
        
        
        for(int i=20000;i>=0;i--)
        {  
            if(mp[i]!=0)
            {
                if(k<=mp[i])
                    return i-10000;
                else
                    k-=mp[i];
            }
        }
        return -1;
    }
};

class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        
        if(nums.size()<=1)
            return nums.size();
        
        sort(nums.begin(),nums.end());
        
        int ans = 0;
        int count = 1;
        for(int i =0;i<nums.size();i++)
        {   
            if(i==nums.size()-1)
                return max(ans,count);
            
            if(nums[i]==nums[i+1])
                continue;
            else if(nums[i]+1==nums[i+1])
            {
                count ++;
            }
            else
            {   
                ans = max(ans,count);
                count =1;
            }
            
        }
        
        
        
        return ans;
        
        
        
    }
};

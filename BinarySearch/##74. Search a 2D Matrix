class Solution {   //可以多練習，binary search
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        int l = 0;
        int r = matrix.size()-1;
        int index = 0;
        int mid;
            
        while(l<=r)
        {
            int mid = (l+r)/2;
            if(target == matrix[mid][0])
                return true;
            else if(target>matrix[mid][0])
            {
                l = mid+1;
            }
            else
                r = mid-1;
        }
        if(l==matrix.size())
            index = l-1;        
        else if(index==-1)
            return false;
        else if(matrix[l][0]>matrix[mid][0])
            index = l-1;
        else
            index = l;
        
        cout<<index;
        int ll=0;
        int rr=matrix[0].size()-1;
        
        while(ll<=rr)
        {
            int mid = (ll+rr)/2;
            if(target == matrix[index][mid])
                return true;
            else if(target>matrix[index][mid])
            {
                ll = mid+1;
            }
            else
                rr = mid-1;
        }
        
        
        return false;
    }
};
